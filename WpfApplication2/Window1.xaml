<Window x:Class="WpfApplication2.MarginsDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="130" Width="340" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="Answ" Height="23" Margin="10,31,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Cancel" Click="Cancel_Click" HorizontalAlignment="Right" Margin="0,0,10,11" VerticalAlignment="Bottom" Width="75"/>
        <Button Content="Ок" Click="Ok_Click" HorizontalAlignment="Right" Margin="0,0,90,11" VerticalAlignment="Bottom" Width="75"/>
        <TextBlock x:Name="Request" Margin="10,9,10,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Введите название новой деревни:"/><LineBreak/><Run Language="ru-ru"/></TextBlock>

    </Grid>
</Window>
